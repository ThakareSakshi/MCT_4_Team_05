{
    "name":"bookmark my time",
    "version":"0.0.1",
    
    
    "permissions": ["storage", "tabs"],
    "host_permissions": ["https://*.youtube.com/*"],
    "background": {
      "service_worker": "background.js"
    
    },
    "content_scripts": [
      {
        "matches": ["https://*.youtube.com/*"],
        "js": ["contentScript.js"]
      }
    ],
    "web_accessible_resources": [
        {
          "resources": [
            "assets/bk.png",
            "assets/play.png",
            "assets/delete.png",
            "assets/save.png",
            "assets/oops.gif",
            "assets/bk-icon.png"
          ],
          "matches": ["https://*.youtube.com/*"]
        }
      ],
    "action":{
        "default_popup":"popup.html",
        "default_icon":"assets/bk-icon.png"
    },
    "manifest_version":3
}